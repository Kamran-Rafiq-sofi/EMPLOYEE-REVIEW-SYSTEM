<%# #signin page for employee admin%>
<main>
    <div class="card text center" style="width:25rem; margin:auto; margin-top:20px; border-radius:20px">
        <div class="card-body" style="border-radius:20px; background-color: burlywood;">
           <h5 class="card-title">Sign In</h5>
           <p class="card-text">
             <form action="/signin" method="post">
                <input type="email" class="form-control mb-3" name="email" placeholder="write your email here" required>
                <input type="password" class="form-control mb-3" name="password" placeholder="password" required>
                <button type="submit" class="btn btn-primary mb-3">Login</button>
             </form>
           </p>
        </div>
    </div>

</main>