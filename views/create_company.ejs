<%# # shows warning message and it will create an admin along side company to manage the company # shows the form to
create a new company%>
<main>
    <div id="warnings-by-server">

    </div>
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        "While creating company we create it's admin along side it to manage company"
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>   
    <div class="card text-center" style="width:25rem; margin:auto; margin-top:20px; border-radius:10px; background-color:burlywood;">
       <div class="card-body">
        <h5 class="card-title">Create Company</h5>
        <p class="card-text">
        <form id="create-company-form">

            <input type="text" class="form-control mb-3" name="name" placeholder="name" required>
            <input type="email" class="form-control mb-3" name="email" placeholder="email" required>
            <input type="password" class="form-control mb-3" name="password" placeholder="password" required>
            <input type="password" class="form-control mb-3" name="cpassword" placeholder="Confirm Password" required>
            <input type="text" class="form-control mb-3" name="companyName" placeholder="Company Name" required>
            <div class="from-floating mb-3">
                 <textarea class="form-control " placeholder="Enter The Company Description here" id="companyDescription" name="companyDescription" required></textarea>
                 <label for="companyDescription">Company Description</label>
            </div>
            <button type="submit" class="btn btn-primary mb-3">Create Company</button>
        </form>
        </p>
       </div>
    
    
    </div> 
    <script  src="/js/create_company.js"></script>
</main>